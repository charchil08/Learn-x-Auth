@using WebApp_UnderTheHood.Entities.ViewModels;
@model LoginVM
@{
    ViewData["Title"] = "Login Page";
}

<div class="container-fluid container-lg">
    <h1 class="text-primary">Login Page</h1>
    <form method="post" asp-action="Login" asp-controller="Account">
        <div class="form-group mb-2">
            <div class="row">
                <div class="col-2">
                    <label class="form-label" asp-for="UserName"></label>
                </div>
                <div class="col-5">
                    <input class="form-control" asp-for="@Model.UserName" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group mb-2">
            <div class="row">
                <div class="col-2">
                    <label class="form-label" asp-for="Password"></label>
                </div>
                <div class="col-5">
                    <input class="form-control" asp-for="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group mb-2">
            <div class="row">
                <input type="checkbox" asp-for="RememberMe" class="form-check" />
                <label class="form-check-label" asp-for="RememberMe"></label>
            </div>
        </div>
        <div class="row">
            <div class="col-2">
                <input type="submit" class="btn btn-primary border-1" value="Login" />
            </div>
        </div>
    </form>
</div>
